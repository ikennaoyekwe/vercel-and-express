{
  "version": 2,
  "builds": [
    {
      "src": "/backend/dist/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "/frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/dist/index.js"
    },
    {
      "src": "/(.*\\.(js|json|css|scss|ico|png|jpg|svg|webp))",
      "dest": "/frontend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/index.html"
    }
  ]
}
